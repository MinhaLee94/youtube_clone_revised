mixin video(video)
    div.search__video-mixin
        a(href=`/videos/${video.id}`)
          div.search__video-mixin__thumb(style=`background-image: url(/${video.thumbUrl}); background-size: cover; background-position: center;`)
        div.search__video-mixin__data
          div.search__video-mixin__title=video.title
          div.search__video-mixin__views=`${video.meta.views} views`
          div.search__video-mixin__owner
            a(href=`/users/${video.owner._id}`).search__video-mixin__avatar
                if !video.owner.avatarUrl
                    i.fas.fa-user.basic__avatar
                else
                    img(src=video.owner.avatarUrl).video__owner-avatar
            a(href=`/users/${video.owner._id}`).search__video-mixin__username
              span #{video.owner.username}
          div.search__video-mixin__description=video.description     
                
                    