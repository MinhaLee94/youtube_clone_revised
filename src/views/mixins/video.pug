mixin video(video)
    div.video-mixin
        a(href=`/videos/${video.id}`)
            div.video-mixin__thumb(style=`background-image: url(/${video.thumbUrl}); background-size: cover; background-position: center;`)
        div.video-mixin__data
            a(href=`/users/${video.owner._id}`).video-mixin__avatar
                if !video.owner.avatarUrl
                    i.fas.fa-user.basic__avatar
                else
                    if video.owner.avatarUrl.includes("github")
                        img(src=video.owner.avatarUrl).video__owner-avatar
                    else
                        img(src="/" + video.owner.avatarUrl).video__owner-avatar
            div
                div.video-mixin__title=video.title
                div.video-mixin__meta
                    a(href=`/users/${video.owner._id}`).video-mixin__username
                        span #{video.owner.username}
                    span „Üç #{video.meta.views} views