header
  a(href="/").header__logo
    i.fab.fa-youtube
    div.header__title YouTube
  form(action="/search" method="GET").search__form
    input(placeholder="Search by title", type="text", name="keyword").search__bar
    button.search__btn 
      i.fas.fa-search
  nav
    ul
      if loggedIn
        li
          a(href="/videos/upload")
            i.fas.fa-upload 
        li
          a(href="/users/edit")
            i.fas.fa-user-edit
        li
          a(href="/users/logout") Logout
        li 
          a(href=`/users/${loggedInUser._id}`)
            if !loggedInUser.avatarUrl
              i.fas.fa-user.basic__avatar
            img(src=loggedInUser.avatarUrl).header__avatar
      else
        li 
          a(href="/login") Login
        li
          a(href="/join").header__btn Join

      