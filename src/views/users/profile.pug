extends ../base
include ../mixins/video

block content
  main
    div.profile__data
      if !user.avatarUrl
        i.fas.fa-user.temp__avatar
      else
        if user.avatarUrl.includes("github")
          img(src=user.avatarUrl).avatar
        else
          img(src=user.avatarUrl).avatar
      h3=user.name
    div.video-grid
      each video in user.videos
        +video(video)
      else
        span.empty__message No videos found
